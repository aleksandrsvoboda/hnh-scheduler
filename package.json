{
  "name": "hnh-scheduler",
  "version": "1.3.0",
  "description": "A cross-platform Electron desktop app that runs scenarios on a schedule using local JSON files",
  "main": "dist/main/app.js",
  "author": {
    "name": "HnH Scheduler",
    "email": "noreply@example.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"vite\" \"electron dist/main/app.js\"",
    "build": "tsc && vite build && electron-builder",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "start": "electron dist/main/app.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.hnhscheduler",
    "productName": "HnH Scheduler",
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "dist/preload/**/*",
      "icon.png",
      "package.json",
      "!dist/win-unpacked/**/*",
      "!dist/*.exe",
      "!dist/*.7z",
      "!dist/*.yml",
      "!dist/*.yaml",
      "!dist/*.blockmap",
      "!**/*.map",
      "!**/node_modules/*/.cache/**/*",
      "!src/**/*",
      "!tsconfig.json",
      "!vite.config.ts",
      "!.git/**/*",
      "!.gitignore",
      "!README.md",
      "!CLAUDE.md"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "icon": "icon.png",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}.${ext}",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${name}_${version}_${arch}.${ext}",
      "maintainer": "HnH Scheduler <noreply@example.com>",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName} Setup.${ext}"
    },
    "publish": null
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^7.6.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "keytar": "^7.9.0",
    "node-cron": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  }
}
